# Django Backend Environment Variables
ENVIRONMENT=local
HOME_DIR=/app
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=backend.settings
DEBUG=True
ALLOWED_HOSTS=localhost,backend
LOCAL_PRODUCTION=false
CADASU_API_BASE_URL=http://localhost:8000
BACKEND_URL=http://backend:8000
ALLOWED_FRONTEND_DOMAINS=http://localhost:3000,http://frontend:3000
FILE_TOKEN_SECRET=your-file-token-secret

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_INDEX=0
REDIS_PASSWORD=
REDIS_DB=0

# AWS/S3 Configuration
USE_MINIO=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL=

# Queue Configuration
USE_REDIS_AS_QUEUE=true
YOLO_SQS_QUEUE_URL=
REDIS_QUEUE_NAME=image_processing_queue

# Email Configuration
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PASSWORD=your-email-app-password
EMAIL_RECEIVER=admin@example.com

# External API Keys
LIGHT_PDF_API_KEY=your-light-pdf-api-key